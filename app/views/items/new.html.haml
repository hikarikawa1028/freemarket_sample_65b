.top
  .top__header
    = link_to image_tag("logo.png",class:"image_logo"),root_path, class: "top__header__btn" 


  .top__main
    .top__main__center
      .top__main__center__img-uplode
        .top__main__center__img-uplode__box
          .top__main__center__img-uplode__box__name-box
            .top__main__center__img-uplode__box__name-box__product
              商品名
            .top__main__center__img-uplode__box__name-box__necessary
              必須
          .top__main__center__img-uplode__box__form
            = form_for [@item],html: { class: "top__main__center__img-uplode__box__name-box__form" },html: { id: 'items0' } do |f|
              #image-box
                = f.fields_for :images do |image|
                  .date-index = "=image.index"
                  = i.file_field :src, class: 'top__main__center__img-uplode__box__name-box__form__text', placeholder: '40文字まで'
          .top__main__center__deta__box__warning 
            入力してください

        




      .top__main__center__items
        .top__main__center__items__box
          .top__main__center__items__box__name-box
            .top__main__center__items__box__name-box__product
              商品名
            .top__main__center__items__box__name-box__necessary
              必須
          .top__main__center__items__box__input-box
            = form_for [@item],html: { class: "top__main__center__items__box__input-box__form" },html: { id: 'items1' } do |f|
              = f.text_field :name, class: 'top__main__center__items__box__input-box__form__text', placeholder: '40文字まで'
          
        .top__main__center__items__text-box
          .top__main__center__items__text-box__name-box
            .top__main__center__items__text-box__name-box__product
              商品の説明
            .top__main__center__items__text-box__name-box__necessary
              必須
          = form_for [@item],html: { class: "top__main__center__items__text-box__form" },html: { id: 'items2' } do |f|
            =f.text_area :description, class: 'top__main__center__items__text-box__form__text-area', placeholder: text_placeholder
          .top__main__center__items__text-box__word-count
            0/1000


      .top__main__center__deta
        %p.top__main__center__deta__title
          商品の詳細
        .top__main__center__deta__box
          .top__main__center__deta__box__what
            .top__main__center__deta__box__what__product
              カテゴリー
            .top__main__center__deta__box__what__necessary
              必須
          .top__main__center__deta__box__input-box
            = form_for [@item],html: { class: "top__main__center__deta__box__input-box__form", id: 'items3' } do |f|
              = f.select :category, @category_parent_array, {}, {class: 'top__main__center__deta__box__input-box__form__select', id: 'select1'}
        .top__main__center__deta__box
          .top__main__center__deta__box__what
            .top__main__center__deta__box__what__product
              ブランド
            .top__main__center__deta__box__what__any
              任意
          .top__main__center__deta__box__input-box
            = form_for [@item],html: { class: "top__main__center__deta__box__input-box__form" },html: { id: 'items4' } do |f|
              = f.text_field :brand, class: 'top__main__center__items__box__input-box__form__text', placeholder: '40文字まで'
        .top__main__center__deta__box
          .top__main__center__deta__box__what
            .top__main__center__deta__box__what__product
              商品の状態
            .top__main__center__deta__box__what__necessary
              必須
          .top__main__center__deta__box__input-box
            = form_for [@item],html: { class: "top__main__center__deta__box__input-box__form" },html: { id: 'items5' } do |f|
              = f.select :status, [["選択して下さい", 0],["新品、未使用", 1], ["未使用に近い", 2], ["目立った傷や汚れなし", 3], ["やや傷や汚れあり", 4], ["傷や汚れあり", 5], ["全体的に状態が悪い", 6]], {}, {class: 'top__main__center__deta__box__input-box__form__select', id: 'select2'}



            
      .top__main__center__deta
        %p.top__main__center__deta__title
          配送料の負担
        .top__main__center__deta__box
          .top__main__center__deta__box__what
            .top__main__center__deta__box__what__product
              配送料の負担
            .top__main__center__deta__box__what__necessary
              必須
          .top__main__center__deta__box__input-box
            = form_for [@item],html: { class: "top__main__center__deta__box__input-box__form" },html: { id: 'items6' } do |f|
              = f.select :postage, [["選択して下さい", 0],["送料込み(出品者負担)", 1], ["着払い(購入者負担)", 2]], {}, {class: 'top__main__center__deta__box__input-box__form__select', id: 'select3'}
        .top__main__center__deta__box
          .top__main__center__deta__box__what
            .top__main__center__deta__box__what__product
              発送元の地域
            .top__main__center__deta__box__what__any
              任意
          .top__main__center__deta__box__input-box
            = form_for [@item],html: { class: "top__main__center__deta__box__input-box__form" },html: { id: 'items7' } do |f|
              = f.select :prefecture, Item.prefectures.keys, {}, {class: 'top__main__center__deta__box__input-box__form__select', id: 'select4'}
        .top__main__center__deta__box
          .top__main__center__deta__box__what
            .top__main__center__deta__box__what__product
              発送までの日数
            .top__main__center__deta__box__what__necessary
              必須
          .top__main__center__deta__box__input-box
            = form_for [@item],html: { class: "top__main__center__deta__box__input-box__form" },html: { id: 'items8' } do |f|
              = f.select :shipping_date, [["選択して下さい", "0"],["1~2日で発送", 1], ["2~3日で発送", 2], ["4~7日で発送", 3]], {}, {class: 'top__main__center__deta__box__input-box__form__select', id: 'select5'}



      .top__main__center__price
        %p.top__main__center__deta__title
          価格（¥300〜9,999,999）
        .top__main__center__price__box
          .top__main__center__price__box__money
            .top__main__center__price__box__money__waht
              .top__main__center__price__box__money__waht__product
                販売価額
              .top__main__center__price__box__money__waht__necessary
                必須
            %span.top__main__center__price__box__money__span
              ¥
            = form_for(:session, html:{class: "top__main__center__price__box__money__form", id: 'items9'}) do |f|
              = f.number_field :price, class: 'top__main__center__price__box__money__form__input', id: "input"
              
          .top__main__center__price__box__center
            .top__main__center__price__box__center__sale
              販売手数料 (10%)
            .top__main__center__price__box__center__minus
              ー
          .top__main__center__price__box__bottom
            .top__main__center__price__box__bottom__sale
              販売利益
              = form_for [@item],html: { class: "top__main__center__price__box__bottom__sale__form", id: 'items9'} do |f|
                = f.number_field :price, class: 'top__main__center__price__box__bottom__sale__form__input', id: "price"
            .top__main__center__price__box__bottom__minus
              ー
        .top__main__center__price__footer
          %button#id_value.top__main__center__price__footer__btn  出品
          = link_to "戻る" ,root_path, class: "top__main__center__price__footer__return"  
              



  .top__footer