                = image_tag src= 'https://img04.shop-pro.jp/PA01025/117/product/130932803.png?cmsp_timestamp=20180427181601', size: '60x60', class: 'item-list'
            .item-selectlist
              .item-selectlist__inner
                = image_tag src= 'https://cdn.thumb.punyus.jp/res/up/punyus/shp/__basethum900__/punyus/PN18AW/1-50/019/20180808-0014.jpg', size: '60x60', class: 'item-list'
