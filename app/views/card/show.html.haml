.header
  .header__logo
    = link_to root_path do
      = image_tag asset_path('logo.png'), size: "140x40", alt: "test"

.mypage-main
  .mypage-contents
    = render partial: 'users/side_content'

    %section.chapter__container
      %h2.chapter__container__head 登録クレジットカード情報
      .payment__main
        .payment__main__list
          .card__number__view クレジットカード番号 下４桁
          .card__number 
            = "**** **** **** " + @default_card_information.last4
          .expire__date__view 有効期限 
          .expire__date 
            - exp_month = @default_card_information.exp_month.to_s
            - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
          = form_tag(delete_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
            %input{ type: "hidden", name: "card_id", value: "" }
            %button 削除する
          .to_top
            = link_to "トップページに戻る", root_path, class: "to_top"
.fotter
  = render "shared/banner"
  = render "shared/overview"
